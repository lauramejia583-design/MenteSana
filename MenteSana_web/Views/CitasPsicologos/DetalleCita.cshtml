
@{
    ViewData["Title"] = "DetalleCita";
}

@model MenteSana_web.Models.Cita

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mente Sana</title>

    <link rel="icon" type="image/png" href="~/IMG/menteSana-logo2.png" />
    <link rel="stylesheet" href="~/css/EstiloInicio.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
</head>

<body class="bg-light d-flex flex-column min-vh-100">

    <!-- HEADER -->
    <header class="py-3 border-bottom">
        <div class="container d-flex justify-content-between align-items-center flex-wrap">

            <img src="~/IMG/menteSana-logo1.png" class="logo-header" alt="Mente Sana">

            <h1 class="h5 fw-bold text-center flex-fill mb-0">MENTE SANA</h1>

            <div class="d-flex align-items-center" style="gap: 80px;">
                <img src="~/IMG/pascualBravo-logo.png" class="logo-header" alt="Pascual Bravo">

                <div class="dropdown">
                    <img src="~/IMG/11.png" class="profile-img dropdown-toggle" id="profileDropdown"
                         data-bs-toggle="dropdown" aria-expanded="false" alt="Perfil">

                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="profileDropdown">
                        <li><a class="dropdown-item" href="/Estudiantes/Registros">Ver registros</a></li>
                        <li><a class="dropdown-item" href="/Estudiantes/Perfil">Perfil</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <a class="dropdown-item" href="@Url.Action("CerrarSesion", "Acceso")">
                                Cerrar sesión
                            </a>

                        </li>


                    </ul>
                </div>
            </div>

        </div>
    </header>

    <div class="container my-5">

        <div class="card shadow-lg border-0 rounded-4 p-4">
            <h2 class="text-center mb-4">Detalle de la Cita</h2>

            <div class="row mb-3">
                <div class="col-6">
                    <h5 class="fw-bold">Estudiante</h5>
                    <p>@Model.NombreEstudiante @Model.ApellidoEstudiante</p>
                </div>
                <div class="col-6">
                    <h5 class="fw-bold">Psicólogo</h5>
                    <p>@Model.NombrePsicologo @Model.ApellidoPsicologo</p>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-6">
                    <h5 class="fw-bold">Fecha</h5>
                    <p>@Model.Fecha.ToString("dd 'de' MMMM 'de' yyyy")</p>
                </div>
                <div class="col-6">
                    <h5 class="fw-bold">Hora</h5>
                    <p>@Model.Hora.ToString(@"hh\:mm")</p>
                </div>
            </div>

            <div class="mb-3">
                <h5 class="fw-bold">Motivo de la cita</h5>
                <p>@Model.motivo</p>
            </div>

            <div class="text-start mt-4">
                <a href="@Url.Action("ListaCitaPsicologica", "CitasPsicologos")" class="btn btn-primary btn-lg">
                    Volver
                </a>
            </div>
        </div>
    </div>
    </body>
    </html>

