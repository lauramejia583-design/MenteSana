
@{
    ViewData["Title"] = "ListaCitaPsicologica";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mente Sana</title>

    <link rel="icon" type="image/png" href="/IMG/menteSana-logo2.png">
    <link rel="stylesheet" href="~/css/EstiloInicio.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/CSS/style.css">
    <!-- Flatpickr -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr/dist/l10n/es.js"></script>

</head>

<body class="bg-light d-flex flex-column min-vh-100">
    <header class="py-3 border-bottom">
        <div class="container d-flex justify-content-between align-items-center flex-wrap">
            <img src="/IMG/menteSana-logo1.png" class="logo-header" alt="Mente Sana">
            <h1 class="h5 fw-bold text-center flex-fill mb-0">MENTE SANA</h1>
            <div class="d-flex align-items-center" style="gap: 80px;">
                <img src="/IMG/pascualBravo-logo.png" class="logo-header" alt="Pascual Bravo">
                <div class="dropdown">
                    <img src="/IMG/11.png" class="profile-img dropdown-toggle" id="profileDropdown" data-bs-toggle="dropdown" aria-expanded="false" alt="Perfil">
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="profileDropdown">
                        <li><a class="dropdown-item" href="/registros.html">Ver registros</a></li>
                        <li><a class="dropdown-item" href="/perfil.html">Perfil</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item text-danger" href="/index.html">Salir de la cuenta</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </header>

    <main class="container my-5 flex-fill">
        <h2 class="text-center page-title">Citas agendadas</h2>

        <div class="row g-4 justify-content-center">
            <div class="col-md-6 col-lg-5 d-flex flex-column align-items-center">
                <div class="calendar-card w-100">
                    <div id="calendario"></div>
                </div>
                <div class="mt-4 w-100 d-flex justify-content-start">
                    <a href="@Url.Action("HomePsicologo", "Psicologo")" class="btn btn-primary btn-lg">
                        Regresar
                    </a>
                </div>
            </div>
            <div class="col-md-6 col-lg-5">
                <div class="ordenar-wrap">
                    <select id="ordenar" class="form-select" style="max-width: 240px">
                        <option value="reciente">Ordenar por: Fecha (más reciente)</option>
                        <option value="antigua">Fecha (más antigua)</option>
                        <option value="nombre">Nombre (A–Z)</option>
                        <option value="estado">Estado emocional</option>
                    </select>
                </div>

                <div id="lista-citas">
                    @foreach (var Cita in Model)
                    {
                       <a href="@Url.Action("DetalleCita", "CitasPsicologos", new { id = Cita.Id_Cita })"
                           class="text-decoration-none text-dark">
                            <article class="card mb-3 border-0 shadow-sm rounded-4">
                            <div class="card-body d-flex justify-content-between align-items-center">

                                <div>
                                    <div class="fw-semibold">@Cita.NombreEstudiante</div>
                                    <div class="small text-muted">
                                        @Cita.Fecha.ToString("dd 'de' MMMM 'de' yyyy")
                                    </div>
                                </div>

                                <div class="text-end">
                                    <div class="fw-semibold">@Cita.NombrePsicologo</div>
                                </div>

                            </div>
                            </article>
                        </a>
                    }
                </div>
            </div>
        </div>
    </main>

    <footer class="py-4 bg-white border-top mt-auto text-center">
        <p class="small text-muted mb-0">© 2025 Mente Sana — Institución Universitaria Pascual Bravo</p>
    </footer>

    <script src="~/JS/citaAgendada.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>



