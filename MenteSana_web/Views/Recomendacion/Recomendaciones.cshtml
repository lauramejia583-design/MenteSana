@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers



@{
    ViewData["Title"] = "Recomendaciones";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mente Sana</title>

    <link rel="icon" type="image/png" href="~/IMG/menteSana-logo2.png" />
    <link rel="stylesheet" href="~/css/EstiloInicio.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
</head>

<body class="bg-light d-flex flex-column min-vh-100">

    <!-- HEADER -->
    <header class="py-3 border-bottom">
        <div class="container d-flex justify-content-between align-items-center flex-wrap">

            <img src="~/IMG/menteSana-logo1.png" class="logo-header" alt="Mente Sana">

            <h1 class="h5 fw-bold text-center flex-fill mb-0">MENTE SANA</h1>

            <div class="d-flex align-items-center" style="gap: 80px;">
                <img src="~/IMG/pascualBravo-logo.png" class="logo-header" alt="Pascual Bravo">

                <div class="dropdown">
                    <img src="~/IMG/11.png" class="profile-img dropdown-toggle" id="profileDropdown"
                         data-bs-toggle="dropdown" aria-expanded="false" alt="Perfil">

                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="profileDropdown">
                        <li><a class="dropdown-item" href="/Estudiantes/Registros">Ver registros</a></li>
                        <li><a class="dropdown-item" href="/Estudiantes/Perfil">Perfil</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <a class="dropdown-item" asp-controller="Acceso" asp-action="CerrarSesion">
                                Cerrar sesión
                            </a>
                        </li>


                    </ul>
                </div>
            </div>

        </div>
    </header>


    <main class="container my-5 flex-fill">
        <section class="row align-items-center g-5">

            <div class="col-md-5 text-center">
                <img src="/IMG/emo-ilustracion.png" alt="Ilustración estado emocional"
                     class="img-fluid" style="max-height:360px;">
            </div>

            <div class="col-md-7">

                <h2 class="fw-bold text-center text-md-start mb-3">
                    Hola! Pepito Perez
                </h2>

                <p class="text-muted">
                    Hoy te encuentras: <strong>@ViewBag.Emocion</strong>.
                    Aquí tienes recomendaciones que pueden ayudarte:
                </p>

                <div class="p-4 rounded-3 bg-info-subtle border">

                    @if (Model.Count == 0)
                    {
                        <p>No hay recomendaciones registradas para esta emoción.</p>
                    }
                    else
                    {
                        <ul class="mb-0">
                            @foreach (var item in Model)
                            {
                                <li>
                                    @item.contenido
                                    <br />
                                    <small class="text-muted">
                                        Fecha: @item.fecha_generada.ToString("dd/MM/yyyy")
                                    </small>
                                    <br /><br />
                                </li>
                            }
                        </ul>
                    }
                </div>

                <div class="d-flex flex-wrap gap-3 mt-4">
                    <a asp-controller="Estudiantes" asp-action="HomeEstudiantes"
                       class="btn btn-primary btn-lg">Regresar</a>

                    <a asp-controller="Citas" asp-action="AgendarCita"
                       class="btn btn-primary btn-lg">Contactar al área de Bienestar</a>
                </div>



            </div>
        </section>
    </main>

    <footer class="py-4 bg-white border-top mt-auto text-center">
        <p class="small text-muted mb-0">© 2025 Mente Sana — Institución Universitaria Pascual Bravo</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>


    </body>
    </html>
